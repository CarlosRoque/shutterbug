<script type="text/javascript">
	
$(function(){
		
		$(".main_nav > *").addClass('headlink');
		
		$('li.headlink').hover(
			function(){$('ul', this).show();},
			function(){$('ul', this).hide();}
		);
	
		// IE Fix For Navigation
		if($.browser.msie){
			// ******* THIS IS THE CSS FIXES FOR [.subnav] ********
			$("ul.subnav").css({
				"margin-left":"-172px",
				"margin-top":"25px"
			});	
			
			$("ul.subnav:first").css({
				"margin-left":"-72px",
				"margin-top":"25px"
			});
			
			$("ul.subnav:last").css({
				"margin-left":"-76px",
				"margin-top":"25px"
			});
									
		}

	});

</script>
