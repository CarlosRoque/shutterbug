<?php
    class Services extends Controller
	{
		function __construct()
		{
			parent :: Controller();
		}
		
		function photoreflect()
		{
			$data['title'] = "Photo Reflect | Services | Shutterbug Photo Mall";
			$data['header'] = "shared/general_header.php";
			$data['page'] = "services/reflect_view.php";
			
			$this->load->view('index.tpl.php', $data);
		}
		
		function used()
		{
			$data['title'] = "Used Equipment | Services | Shutterbug Photo Mall";
			$data['header'] = "shared/general_header.php";
			$data['page'] = "services/used_view.php";
			
			$this->load->view('index.tpl.php', $data);
		}
		
		function business()
		{
			$data['title'] = "Business Services | Services | Shutterbug Photo Mall";
			$data['header'] = "shared/general_header.php";
			$data['page'] = "services/business_view.php";
			
			$this->load->view('index.tpl.php', $data);
		}
	}
?>